<VirtualHost *:443>
DocumentRoot {{ git_clone_document_root }}
ServerName {{ git_clone_fqdn }}
<Directory "{{ git_clone_document_root }}">
allow from all
Options +Indexes
</Directory>
SSLEngine on
SSLCertificateFile /etc/pki/tls/certs/{{ git_clone_fqdn }}/{{ git_clone_fqdn }}.crt
SSLCertificateKeyFile /etc/pki/tls/certs/{{ git_clone_fqdn }}/{{ git_clone_fqdn }}.key
# SSLCertificateChainFile /etc/pki/tls/certs/{{ git_clone_fqdn }}/{{ git_clone_fqdn }}.chain
# ErrorLog /var/log/httpd/{{ git_clone_fqdn }}/error_log
# CustomLog /var/log/httpd/{{ git_clone_fqdn }}/access_log combined
</VirtualHost>
